{
    "variables": {
        "vc_server":        "",
        "vc_username":      "",
        "vc_password":      "",
	    "host":             "",
        "datacenter":       "",
        "cluster":          "",
        "network":          "",
        "datastore":        "",
        "folder":           "",
        "resource_pool":    "",
        "vm_name":          "",
        "CPUs":             "",
        "RAM":              "",
        "disk_size":        "",
        "password":         "",
        "shellinline":      "",
        "os_iso_path":      ""
    },

    "sensitive-variables": ["vc_password", "winadmin_password"],

    "builders": [
      {
        "type": "vsphere-iso",

        "vcenter_server": "{{user `vc_server`}}",
        "username": "{{user `vc_username`}}",
        "password": "{{user `vc_password`}}",
        "insecure_connection": "true",

	    "host":    "{{ user `host` }}",
        "datacenter": "{{user `datacenter`}}",
        "cluster": "{{user `cluster`}}",
        "network": "{{user `network`}}",
        "datastore": "{{user `datastore`}}",
        "folder": "{{user `folder`}}",

        "communicator": "winrm",
        "winrm_username": "Administrator",
        "winrm_password": "stateless",
	    "convert_to_template": "false",

        "vm_name": "{{user `vm_name`}}",
        "guest_os_type": "windows8srv-64",

        "CPUs": "{{user `CPUs`}}",
        "RAM": "{{user `RAM`}}",
        "RAM_reserve_all": true,
        "firmware": "bios",

        "disk_controller_type": "lsilogic-sas",
        "disk_size": "{{user `disk_size`}}",
        "disk_thin_provisioned": true,

        "network_card": "vmxnet3",

        "iso_paths": [
            "{{user `os_iso_path`}}",
            "[] /vmimages/tools-isoimages/windows.iso"
        ],

        "floppy_files": [
            "/flask/packer/templates/windows/en_windows_server_2016_x64/autounattend.xml",
            "/flask/packer/templates/windows/scripts/disable-network-discovery.cmd",
            "/flask/packer/templates/windows/scripts/enable-rdp.cmd",
            "/flask/packer/templates/windows/scripts/enable-winrm.ps1",
            "/flask/packer/templates/windows/scripts/set-temp.ps1",
            "/flask/packer/templates/windows/scripts/install-vm-tools.cmd"
        ]
        }
    ],

    "provisioners": [
        {
        "type": "windows-shell",
        "inline": ["{{ user `shellinline` }}"]
        }
    ]

}