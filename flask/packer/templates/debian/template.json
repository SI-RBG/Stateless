{
      "variables": {
      "vc_server":      "",
      "vc_username":    "",
      "vc_password":    "",
      "vm_name":        "",
      "host":           "",
      "datastore":      "",
      "network":        "",
      "cluster":        "",
      "datacenter":     "",
      "resource_pool":  "",
      "guest_os_type":  "",
      "username":       "",
      "password":       "",
      "CPUs":           "",
      "RAM":            "",
      "disk_size":      "",
      "os_iso_path":    "",
      "shellinline":    ""
    },
  "builders": [
    {
        "type": "vsphere-iso",
        "vcenter_server":      "{{ user `vc_server` }}",
        "username":            "{{ user `vc_username` }}",
        "password":            "{{ user `vc_password` }}",
        "insecure_connection": "true",

        "vm_name": "{{ user `vm_name` }}",
        "host":    "{{ user `host` }}",
        "datastore":"{{ user `datastore` }}",
        "network":"{{ user `network` }}",

        "cluster": "{{ user `cluster` }}",
        "datacenter": "{{ user `datacenter` }}",
        "resource_pool": "{{ user `resource_pool` }}",


        "guest_os_type": "{{ user `guest_os_type` }}",

        "ssh_username": "{{ user `username` }}",
        "ssh_password": "{{ user `password` }}",

        "CPUs":             "{{ user `CPUs` }}",
        "CPU_hot_plug": "true",
        "RAM":              "{{ user `RAM` }}",
        "RAM_hot_plug": "true",

        "disk_controller_type":  "pvscsi",
        "disk_size":        "{{ user `disk_size` }}",
        "disk_thin_provisioned": true,

        "network_card": "vmxnet3",

        "iso_paths": [
           "{{ user `os_iso_path` }}"
        ],
        "boot_command": [
            "<esc><wait>auto url={{user `preseed_baseurl` }}/debian-preseed.cfg hostname=debian-template<enter>"
        ]
    }
    ],

    "provisioners": [
        {
            "type": "file",
            "source":"_sharedfiles/20-cob",
            "destination": "/tmp/20-cob"
        },
        {
            "type": "shell",
            "execute_command":"echo 'debian' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
            "script":"_sharedfiles/sysprep"
        }

    ]
}